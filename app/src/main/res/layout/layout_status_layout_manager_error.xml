<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/error_click"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/status_layout_background_color"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_status_error_image"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:scaleType="fitXY"
        android:src="@drawable/ic_net_error"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/network_break"
        android:textColor="@color/common_black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_status_error_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/status_layout_manager_error"
        android:textColor="@color/status_layout_tip_text_color"
        android:textSize="@dimen/sp_16" />

</LinearLayout>