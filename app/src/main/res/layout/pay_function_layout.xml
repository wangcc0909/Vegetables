<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_15"
        android:text="支付方式"
        android:textColor="@color/color_37"
        android:textSize="@dimen/sp_14"/>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_15"
        android:src="@drawable/ic_close"/>

    <View
        android:id="@+id/func_line_one"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/tv_title"
        android:background="@color/color_f0"/>

    <TextView
        android:id="@+id/tv_pay_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/func_line_one"
        android:background="@drawable/text_gray_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:text="在线支付"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/tv_pay_outline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/func_line_one"
        android:background="@drawable/text_gray_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:text="货到付款"
        android:layout_toEndOf="@id/tv_pay_online"
        android:textSize="@dimen/sp_12"/>

    <TextView
        android:id="@+id/tv_pay_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/func_line_one"
        android:background="@drawable/text_gray_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_6"
        android:text="公司转账"
        android:layout_toEndOf="@id/tv_pay_outline"
        android:textSize="@dimen/sp_12"/>


    <Space
        android:id="@+id/space_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"/>

    <TextView
        android:id="@+id/tv_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginStart="@dimen/dp_60"
        android:background="@drawable/text_red_bg"
        android:layout_above="@+id/space_view"
        android:gravity="center"
        android:padding="@dimen/dp_8"
        android:text="完成"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_14"/>


</RelativeLayout>