<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_140"
    android:paddingEnd="@dimen/dp_15"
    android:paddingStart="@dimen/dp_15"
    app:layout_constraintTop_toBottomOf="@+id/ib_msg">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/me_white_bg"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ci_avatar"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_55"
        android:layout_marginStart="@dimen/dp_15"
        android:src="@drawable/me"/>

    <TextView
        android:id="@+id/tv_nickname"
        style="@style/wrapWrap"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_toEndOf="@+id/ci_avatar"
        android:text="用户昵称"
        android:textColor="@color/common_black"
        android:textSize="@dimen/sp_14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ci_avatar"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection"
                style="@style/matchWrap"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/matchWrap"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="收藏"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <include layout="@layout/linear_vertical_view"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_follow"
                style="@style/matchWrap"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/matchWrap"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="关注"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <include layout="@layout/linear_vertical_view"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_browse"
                style="@style/matchWrap"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/matchWrap"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="足迹"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <include layout="@layout/linear_vertical_view"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_summary"
                style="@style/matchWrap"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/common_black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                style="@style/matchWrap"
                android:layout_marginTop="@dimen/dp_4"
                android:gravity="center"
                android:text="心得"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>