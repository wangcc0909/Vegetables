<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/myStatusBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_top"
        android:background="@android:color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@android:color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="填写订单"
            android:textColor="@color/color_37"
            android:textSize="@dimen/sp_16"/>

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_left_black"/>
    </RelativeLayout>

    <com.github.jdsjlzx.recyclerview.LRecyclerView
        android:id="@+id/mRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.github.jdsjlzx.recyclerview.LRecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_1"
        android:background="@color/color_f0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_total_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:text="$99"
            android:background="@android:color/white"
            android:textColor="@color/color_navigation"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_width="@dimen/dp_120"
            android:layout_height="match_parent"
            android:background="@color/color_navigation"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>

</LinearLayout>